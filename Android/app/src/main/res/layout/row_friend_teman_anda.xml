<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
			  android:background="#FFF"
			  >

	<!--
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="#FFFF"
        card_view:contentPadding="10dp"> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
			android:layout_margin="10dp" >

			<ImageView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:id="@+id/imageView"
			android:src="@drawable/ic_account_circle_24dp1"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginLeft="5dp">

				<TextView
					android:id="@+id/output_realname"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Real Name"
					android:textSize="@dimen/abc_text_size_subhead_material"
					android:textColor="#000"
					android:alpha="@dimen/primaryTextDark"/>

				<TextView
					android:id="@+id/output_accountname"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Account Name"
					android:textColor="#000"
					android:alpha="@dimen/secondaryTextDark"
					android:textStyle="italic"/>

			</LinearLayout>
        </LinearLayout>

    <!-- </android.support.v7.widget.CardView> -->


</LinearLayout>