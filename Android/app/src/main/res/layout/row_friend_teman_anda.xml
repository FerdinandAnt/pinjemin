<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

	<android.support.v7.widget.CardView
	android:id="@+id/card_view"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:layout_margin="3dp"
	card_view:cardBackgroundColor="#FFFF"
	card_view:contentPadding="10dp">

	<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	android:orientation="horizontal">

		<ImageView
		android:id="@+id/imageView"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:src="@drawable/ic_account_circle_24dp1" />

		<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:orientation="vertical">

			<TextView
			android:id="@+id/output_realname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:alpha="@dimen/primaryTextDark"
			android:text="Real Name"
			android:textColor="#000"
			android:textSize="@dimen/abc_text_size_subhead_material" />

			<TextView
			android:id="@+id/output_accountname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:alpha="@dimen/secondaryTextDark"
			android:text="Account Name"
			android:textColor="#000"
			android:textStyle="italic" />

		</LinearLayout>
	</LinearLayout>

	</android.support.v7.widget.CardView>


</LinearLayout>