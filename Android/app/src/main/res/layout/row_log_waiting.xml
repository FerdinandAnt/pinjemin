<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="#FFFF"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/output_nama_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/output_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/output_nama_barang"
                android:layout_marginTop="5dp"
                android:text="Deskripsi"
                android:textColor="#000" />

            <TextView
                android:id="@+id/output_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="12 Des" />

            <TextView
                android:id="@+id/output_batas_akhir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/output_deskripsi"
                android:layout_marginTop="5dp"
                android:text="Dibutuhkan Paling Lambat"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/output_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/output_deskripsi"
                android:layout_marginTop="5dp"
                android:text="Harga"
                android:textColor="#ff0000"
                android:visibility="gone" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>