<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="#FFFF"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/output_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Name"
                android:textColor="#000"
				android:alpha="@dimen/primaryTextDark"
                android:textSize="@dimen/abc_text_size_subhead_material"/>

            <TextView
                android:id="@+id/output_accountname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Name"
                android:textColor="#000"
                android:alpha="@dimen/secondaryTextDark"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">



                <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_tolak"
                android:src="@drawable/ic_clear_24dp"
                android:background="@android:color/transparent"
                android:clickable="true"/>

				<ImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/btn_setuju"
					android:src="@drawable/ic_done_24dp"
					android:background="@android:color/transparent"
					android:clickable="true"
                    android:layout_marginLeft="7dp"/>


                <!--
                <TextView
                    android:id="@+id/btn_tolak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginLeft="16dp"
                    android:text="TOLAK"
                    android:textColor="@color/button_material_dark"
                    android:textStyle="bold"/>

				<TextView
				android:id="@+id/btn_setuju"
				android:layout_width="wrap_content"
				android:clickable="true"
				android:layout_height="wrap_content"
				android:layout_marginLeft="16dp"
				android:text="SETUJUI"
				android:textColor="@color/colorPrimary"
				android:textStyle="bold"/>

 -->
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>