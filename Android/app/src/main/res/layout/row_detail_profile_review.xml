<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="#FFFF"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/output_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Name"
                android:textColor="#000"
                android:alpha="@dimen/primaryTextDark"
                android:textSize="@dimen/abc_text_size_subhead_material"/>

            <TextView
                android:id="@+id/output_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi Review"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:alpha="@dimen/secondaryTextDark"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/output_nama_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:alpha="@dimen/secondaryTextDark"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>